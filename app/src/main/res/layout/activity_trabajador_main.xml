<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel de Trabajador"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Municipalidad de Cajamarca"
        android:textSize="20sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido Trabajador"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

    <!-- Categorías de Incidentes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categorías de Incidentes"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBaches"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Baches en Calle"
                android:textSize="16sp"
                android:backgroundTint="#FF5722"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnAlumbrado"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Alumbrado Público"
                android:textSize="16sp"
                android:backgroundTint="#FFC107"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnSenalizacion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Señalización"
                android:textSize="16sp"
                android:backgroundTint="#2196F3"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnBasura"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Basura y Limpieza"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnMobiliario"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Mobiliario Urbano"
                android:textSize="16sp"
                android:backgroundTint="#9C27B0"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnParques"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Parques y Jardines"
                android:textSize="16sp"
                android:backgroundTint="#009688"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnAgua"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Agua y Drenaje"
                android:textSize="16sp"
                android:backgroundTint="#03A9F4"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnOtros"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Otros Incidentes"
                android:textSize="16sp"
                android:backgroundTint="#607D8B"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnEmergencias"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="EMERGENCIAS"
                android:textSize="16sp"
                android:backgroundTint="#F44336"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Cerrar Sesión"
        android:textSize="16sp"
        android:backgroundTint="#666666"
        android:layout_marginTop="16dp"/>

</LinearLayout>