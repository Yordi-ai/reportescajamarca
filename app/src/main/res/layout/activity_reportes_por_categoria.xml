<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1976D2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="#FFFFFF"/>

    <!-- Filtros por Estado -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTodos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Todos"
                android:textSize="12sp"
                android:backgroundTint="#1976D2"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <Button
                android:id="@+id/btnPendientes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Pendientes"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnEnProceso"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="En Proceso"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnResueltos"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Resueltos"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>
    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvNoReportes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay reportes en esta categorÃ­a"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReportes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"/>

</LinearLayout>