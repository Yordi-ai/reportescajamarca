<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen del reporte -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivFotoDetalle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"/>
        </androidx.cardview.widget.CardView>

        <!-- Card de informaci贸n -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tipo de Incidente -->
                <TextView
                    android:id="@+id/tvTipoIncidenteDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Incidente"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp"/>

                <!-- Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvEstadoDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendiente"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"/>
                </LinearLayout>

                <!-- Fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvFechaDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/11/2025 12:02"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- Prioridad -->
                <TextView
                    android:id="@+id/tvPrioridadDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prioridad: Media"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"/>

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp"/>

                <!-- T铆tulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T铆tulo:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvTituloDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T铆tulo del reporte"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <!-- Descripci贸n -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripci贸n:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDescripcionDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripci贸n del reporte"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <!-- Ubicaci贸n -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Ubicaci贸n:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDireccionDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direcci贸n completa"
                    android:textSize="14sp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bot贸n Volver -->
        <Button
            android:id="@+id/btnVolverDetalle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VOLVER"
            android:textSize="16sp"
            android:backgroundTint="#1976D2"/>

    </LinearLayout>
</ScrollView>