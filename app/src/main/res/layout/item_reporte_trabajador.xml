<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReporte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con tipo de incidente y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvTipoIncidente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Baches en Calle"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bache grande en Av. PerÃº"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- DescripciÃ³n -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del incidente aquÃ­"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"/>

        <!-- Imagen -->
        <ImageView
            android:id="@+id/ivFotoReporte"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Foto del reporte"
            android:layout_marginBottom="12dp"/>

        <!-- Fecha y Prioridad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23/10/2025 14:30"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/tvPrioridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prioridad: Alta"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- DirecciÃ³n -->
        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Av. PerÃº 123, Cajamarca"
            android:textSize="12sp"
            android:textColor="#999999"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="16dp"/>

        <!-- â­ NUEVO: Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- BotÃ³n Chat -->
            <Button
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ’¬ CHAT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"/>

            <!-- BotÃ³n Cambiar Estado -->
            <Button
                android:id="@+id/btnCambiarEstado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="CAMBIAR ESTADO"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#1976D2"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>