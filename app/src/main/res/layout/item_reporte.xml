<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReporte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Contenido principal del reporte -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Informaci贸n del reporte (lado izquierdo) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <!-- Tipo de Incidente -->
                <TextView
                    android:id="@+id/tvTipoIncidente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baches en Calle"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp"/>

                <!-- T铆tulo -->
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bache grande en Av. Per煤"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <!-- Fecha y Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="23/10/2025 14:30"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendiente"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <!-- Prioridad -->
                <TextView
                    android:id="@+id/tvPrioridad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prioridad: Alta"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <!-- Direcci贸n -->
                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Av. Per煤 123, Cajamarca"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>

            <!-- Imagen del reporte (lado derecho) -->
            <ImageView
                android:id="@+id/ivFotoReporte"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Foto del reporte"
                app:cardCornerRadius="8dp"/>

        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#E0E0E0"/>

        <!-- Botones de acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Bot贸n Ver Detalles -->
            <Button
                android:id="@+id/btnVerDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver detalles"
                android:textSize="12sp"
                android:textColor="#1976D2"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                style="?attr/borderlessButtonStyle"/>

            <!-- Bot贸n Chat -->
            <Button
                android:id="@+id/btnChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Chat"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="8dp"
                style="?attr/borderlessButtonStyle"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>