<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con gradiente azul -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#1976D2"
            android:padding="20dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@android:color/white"
                android:elevation="4dp"/>

            <!-- T铆tulo App -->
            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Reportes Urbanos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAppTitle"
                android:layout_centerHorizontal="true"
                android:text="Cajamarca"
                android:textSize="14sp"
                android:textColor="#CCFFFFFF"/>

        </RelativeLayout>

        <!-- Tarjeta de Perfil -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-50dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <!-- Foto de perfil circular -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/ivFotoPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="#E0E0E0"/>
                </androidx.cardview.widget.CardView>

                <!-- Nombre del usuario -->
                <TextView
                    android:id="@+id/tvNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Usuario"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <!-- Email -->
                <TextView
                    android:id="@+id/tvEmailUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="usuario@ejemplo.com"
                    android:textSize="13sp"
                    android:textColor="#666666"/>

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"/>

                <!-- Estad铆sticas: Total arriba, 4 estados abajo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- TOTAL destacado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="#E3F2FD"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL DE REPORTES"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/tvTotalReportes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"/>
                    </LinearLayout>

                    <!-- Fila de 4 estados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Pendientes -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/tvReportesPendientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pendientes"
                                android:textSize="9sp"
                                android:textColor="#999999"
                                android:textAlignment="center"/>
                        </LinearLayout>

                        <!-- En Proceso -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/tvReportesEnProceso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2196F3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="En Proceso"
                                android:textSize="9sp"
                                android:textColor="#999999"
                                android:textAlignment="center"/>
                        </LinearLayout>

                        <!-- Resueltos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/tvReportesResueltos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resueltos"
                                android:textSize="9sp"
                                android:textColor="#999999"
                                android:textAlignment="center"/>
                        </LinearLayout>

                        <!-- Rechazados -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/tvReportesRechazados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#F44336"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rechazados"
                                android:textSize="9sp"
                                android:textColor="#999999"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Opciones Principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acciones r谩pidas"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <!-- Bot贸n Crear Reporte -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnNewReport"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text=" CREAR NUEVO REPORTE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="#1976D2"/>
            </androidx.cardview.widget.CardView>

            <!-- Bot贸n Mis Reportes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnMisReportes"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text=" MIS REPORTES"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"/>
            </androidx.cardview.widget.CardView>

            <!-- Bot贸n Cerrar Sesi贸n -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:text="Cerrar Sesi贸n"
                android:textSize="13sp"
                android:backgroundTint="#666666"
                style="?attr/borderlessButtonStyle"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>