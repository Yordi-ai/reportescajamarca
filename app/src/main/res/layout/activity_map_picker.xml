<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1976D2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="#FFFFFF"/>

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca en el mapa para seleccionar la ubicación"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvUbicacionSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ninguna ubicación seleccionada"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnConfirmarUbicacion"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CONFIRMAR UBICACIÓN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"/>
    </LinearLayout>

</LinearLayout>